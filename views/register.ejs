<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI",
      Roboto, Oxygen, Ubuntu, Cantarell, "Open Sans", "Helvetica Neue",
      sans-serif;
  }

  .container h1 {
    color: #20de9e;
    font-size: 28px;
    margin-bottom: 18px;
    text-align: center;
  }

  .container form div {
    display: flex;
    flex-direction: column;
    border-bottom: 1px solid #ddd;
  }

  form input[type="file"] {
    display: block;
    padding: 14px;
    background: linear-gradient(45deg, black, transparent);
    color: white;
  }
  
  .container {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    padding: 30px;
    height: 100vh;
    background: #2f2b33;
    width: 100%;
  }

  .container form label {
    margin-bottom: 8px;
    color: #49d7a8;
    font-weight: 600;
  }

  .container form input {
    outline: none;
    padding: 14px;
    border: 1px #ddd;
  }

  form input[type="submit"] {
    background-color: #20de9e;
    width: 100%;
    outline: none;
    border: 1px solid rgb(32, 222, 158);
    border-radius: 20px;
    color: white;
    cursor: pointer;
  }

  .content {
    width: 400px;
    border: 1px solid rgb(32, 222, 158);
    padding: 14px;
    box-shadow: 0px 0px 10px rgba(32, 222, 158, 0.8);
    margin: 20px auto;
    border-radius: 8px;
  }
</style>
<div class="container">
  <h1>Registration Form</h1>
  <div class="content">
    <form action="" method="POST" enctype="multipart/form-data">
      <div>
        <label for="name">Enter Your Name</label>
        <input
          type="text"
          name="name"
          ,
          placeholder="Enter your Name"
          required
        />
      </div>
      <br /><br />
      <div>
        <label for="email">Enter your Email</label>
        <input
          type="email"
          name="email"
          ,
          placeholder="Enter your Email"
          required
        />
      </div>
      <br /><br />
      <div>
        <input type="file" name="image" required />
      </div>
      <br /><br />
      <div>
        <label for="password">Enter your Password</label>
        <input
          type="password"
          name="password"
          placeholder="Enter your Password"
          required
        />
      </div>
      <br /><br />
      <input type="submit" value="Register" />
    </form>
  </div>
</div>

<% if(typeof message !== 'undefined') { %>
<p style="color: green"><% message %></p>
<% } %>
