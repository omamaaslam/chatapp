<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI",
      Roboto, Oxygen, Ubuntu, Cantarell, "Open Sans", "Helvetica Neue",
      sans-serif;
  }

  body {
    background: #2f2b33;
  }

  nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 20px;
    height: 70px;
    padding: 21px;
    border-bottom: 1px solid #3ac999;
    background-color: #3ac999;


    position: sticky;
    top: 0;
    left: 0;
    width: 100%;
    margin-bottom: 20px;
  }

  .nav-brand h1 {
    font-size: 20px;
    color: white;
    text-transform: uppercase;
  }

  nav ul {
    list-style: none;
    display: inline-block;
  }

  nav ul li {
    border: 1px solid red;
    background-color: red;
    padding: 10px;
    border-radius: 10px;
  }

  ul li a {
    text-decoration: none;
    color: white;
    font-weight: 600;
    font-size: 18px;
  }

  nav ul li:hover {
    opacity: 0.8;
    transition: ease-in-out 0.5s;
  }
</style>

<nav>
  <div class="nav-brand"><h1><%= user.name %></h1></div>
  <ul>
    <li><a href="/logout">Log Out</a></li>
  </ul>
</nav>
